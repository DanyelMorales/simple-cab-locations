version: '3.4'
networks:
  app-tier:
    driver: bridge

services:

  cab:
    build:
        context: ./cab_test
        dockerfile: DockerFile
        target: outsidebuild
    container_name: cab
    environment:
      - DOCKER_KAFKA_SERVER=://kafkaContainer:9092
      - MYSQL_HOST=mysqlcontainer
    ports:
      - 9080:9080
    networks:
      - app-tier
    volumes:
      - mym2:/root/.m2
    depends_on:
      - "db"
      - "kafka"

  cab_user:
    build:
        context: ./cab_user
        dockerfile: DockerFile
        target: outsidebuild
    container_name: cabuser
    environment:
      - KAFKA_HOST=://kafkaContainer:9092
      - MYSQL_HOST=mysqlcontainer
    ports:
      - 9081:9081
    volumes:
      - mym2:/root/.m2
    networks:
      - app-tier
    depends_on:
      - "db"
      - "kafka"

  cab_gateway:
    build:
        context: ./gateway
        dockerfile: DockerFile
        target: outsidebuild
    container_name: cab_gateway
    environment:
      - CAB_ADDRESS=cab
      - CAB_PORT=9080
      - USER_PORT=9081
      - USER_ADDRESS=cabuser
    ports:
      - 9001:9001
    volumes:
      - mym2:/root/.m2
    networks:
      - app-tier
    depends_on:
      - "cab_user"
      - "cab"

  zookeeper:
    image: 'bitnami/zookeeper:3'
    container_name: zookeeper
    ports:
      - '2181:2181'
    environment:
      - ALLOW_ANONYMOUS_LOGIN=yes
    networks:
      - app-tier

  kafka:
    image: 'bitnami/kafka:2'
    container_name: kafkaContainer
    ports:
      - '9092:9092'
    environment:
      - KAFKA_CFG_ZOOKEEPER_CONNECT=zookeeper:2181
      - ALLOW_PLAINTEXT_LISTENER=yes
      - KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      - KAFKA_CFG_LISTENERS=PLAINTEXT://kafkaContainer:29092,PLAINTEXT_HOST://kafkaContainer:9092
      - KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://kafkaContainer:29092,PLAINTEXT_HOST://kafkaContainer:9092
      - KAFKA_CFG_INTER_BROKER_LISTENER_NAME=PLAINTEXT
      - KAFKA_CFG_AUTO_CREATE_TOPICS_ENABLE=true
    depends_on:
      - "zookeeper"
    links:
      - zookeeper
    healthcheck:
      test:
        ["CMD", "kafka-topics.sh", "--list", "--zookeeper", "zookeeper:2181"]
      interval: 30s
      timeout: 10s
      retries: 4
    networks:
      - app-tier

  db:
    image: mysql:5.7
    restart: always
    container_name: mysqlcontainer
    environment:
      MYSQL_DATABASE: 'db'
      # So you don't have to use root, but you can if you like
      MYSQL_USER: 'user'
      # You can use whatever password you like
      MYSQL_PASSWORD: 'user123'
      # Password for root access
      MYSQL_ROOT_PASSWORD: 'user123'
    ports:
      # <Port exposed> : < MySQL Port running inside container>
      - '3306:3306'
    expose:
      # Opens port 3306 on the container
      - '3306'
      # Where our data will be persisted
    volumes:
      - my-db:/var/lib/mysql
      - "./init-db.sql:/docker-entrypoint-initdb.d/init.sql"
    depends_on:
      - "kafka"
    links:
      - kafka
    networks:
      - app-tier

# Names our volume
volumes:
  my-db:
  mym2:
